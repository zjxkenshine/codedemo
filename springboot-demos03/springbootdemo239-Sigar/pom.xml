        <dependency>
            <groupId>org.fusesource</groupId>
            <artifactId>sigar</artifactId>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/sigar-1.6.4.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>org.1111</groupId>
            <artifactId>log4j</artifactId>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/log4j.jar</systemPath>
        </dependency>
